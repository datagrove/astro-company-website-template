---
import { getCollection } from 'astro:content';

const testimonials = await getCollection('testimonials', ({ data }) => {
    return data.draft !== true;
});
---
<section class="scroll-mt-16 px-20 my-20" id="testimonials">
    <div>
        <div class="title">
            <h3 class="text-center text-base text-primary dark:text-blue-200 font-semibold tracking-wide uppercase" set:html="Testimonials" />
            <br />
            <h1 class="text-center text-4xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading" set:html="What Our Clients Are Saying" />
        </div>

        <div class="testimonial-cards flex flex-wrap lg:flex-nowrap">
            {
                testimonials.map((testimonial) => (
                <div class="md:w-1/3">
                    <div class="quote-card flex flex-col p-4 lg:p-12">
                        <div class="icon-div flex justify-start md:w-1/3">
                            <img 
                                class="rounded-full border-8 border-blue-300"
                                src={ testimonial.data.image } 
                                alt={ testimonial.data.alt }/>
                        </div>  

                        <div class="text-div flex justify-start flex-col">
                            <p class="mb-3 pt-4 text-md md:text-lg" set:html={ testimonial.data.quote } />
                            <p class="font-bold pt-2" set:html={ testimonial.data.name } />
                            <p class="text-text_muted text-sm dark:text-slate-400" set:html={ testimonial.data.role } />
                        </div>           
                    </div>
                </div>
                ))
            }
        </div>
    </div>

</section>